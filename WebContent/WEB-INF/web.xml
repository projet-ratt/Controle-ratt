<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>ProjectRatt</display-name>
  <session-config>
    <session-timeout>1</session-timeout>
</session-config>
  <servlet>
    <display-name>RegisterServlet</display-name>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.projectratt.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.projectratt.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>SondageServlet</display-name>
    <servlet-name>SondageServlet</servlet-name>
    <servlet-class>com.projectratt.controller.SondageServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>AnswerServlet</display-name>
    <servlet-name>AnswerServlet</servlet-name>
    <servlet-class>com.projectratt.controller.AnswerServlet</servlet-class>
  </servlet>
   <servlet>
    <display-name>AnswerFormServlet</display-name>
    <servlet-name>AnswerFormServlet</servlet-name>
    <servlet-class>com.projectratt.controller.AnswerFormServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SondageServlet</servlet-name>
    <url-pattern>/SondageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AnswerServlet</servlet-name>
    <url-pattern>/AnswerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AnswerFormServlet</servlet-name>
    <url-pattern>/AnswerFormServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>Home.jsp</welcome-file>
  </welcome-file-list>
</web-app>